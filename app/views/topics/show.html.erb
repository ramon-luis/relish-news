<div class="row">
  <h1><%= @topic.name %></h1>
</div>
<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Headline</th>
        <th>Source</th>
        <th>Published</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= image_tag(article['urlToImage'], width: "75px") if !article['urlToImage'].nil? %></td>
          <td><%= link_to article['title'], article['url'], target: :_blank %></td>
          <td><%= article['source']['name'] %></td>
          <td><%= article['publishedAt'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
